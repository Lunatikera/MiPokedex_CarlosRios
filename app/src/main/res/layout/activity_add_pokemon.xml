<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="24dp"
    tools:context=".AddPokemonActivity">

    <!-- Fondo con transparencia -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        android:contentDescription="background" />

    <!-- Contenedor tipo modal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/modal_card_bg"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="8dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agregar_pokemon"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Imagen Pokemon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="240dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:id="@+id/tvSelectImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/seleccionar_imagen"
                    android:textSize="18sp"
                    android:textColor="@color/gray"
                    android:background="#33000000"
                android:visibility="visible" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Input Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:paddingHorizontal="20dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/pokemon_name"
                android:inputType="textPersonName"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input Número -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:paddingHorizontal="20dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNumber"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/pokemon_number"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contenedor horizontal para los dos spinners -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <Spinner
                android:id="@+id/spinnerType1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/spinner_border"
                android:paddingHorizontal="12dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/spinnerType2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/spinner_border"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <!-- Botón Guardar (Capturar) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePokemon"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="@string/capturar"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/pokemon_red"
            app:icon="@drawable/pokeball"
            app:iconSize="25dp" />

    </LinearLayout>
</FrameLayout>
